<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lurdak.try3.MainActivity">

    <Button
        android:id="@+id/companyBtn"
        style="@android:style/Widget.Button"
        android:layout_width="0dp"
        android:layout_height="71dp"
        android:layout_marginEnd="47dp"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="17dp"
        android:onClick="openWorkerList"
        android:text="@string/Worker_list_btn"

        android:textColor="@android:color/holo_blue_light"
        android:textSize="36sp"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workerBtn"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/workerBtn"
        style="@android:style/Widget.Button"
        android:layout_width="0dp"
        android:layout_height="71dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="6dp"
        android:text="@string/add_worker_btn"

        android:textColor="@android:color/holo_blue_light"
        android:textSize="36sp"
        android:onClick="OpenNewWorker"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        tools:layout_constraintLeft_creator="1" />

</android.support.constraint.ConstraintLayout>
